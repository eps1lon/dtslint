{
	"compilerOptions": {
		"baseUrl": "./packages",
		"module": "commonjs",
		"target": "es6",
		"lib": ["es2017"],
		"sourceMap": true,
		"newLine": "lf",

		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"paths": {
			"dtslint-tsutil": ["./dtslint-tsutil"],
			"dtslint-util": ["./dtslint-util"]
		}
	}
}